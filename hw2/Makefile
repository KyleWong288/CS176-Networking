CC = gcc
CFLAGS = -Wall -Wextra

SRC_UDP_SERVER = server_c_udp.c
SRC_UDP_CLIENT = client_c_udp.c
SRC_TCP_SERVER = server_c_tcp.c
SRC_TCP_CLIENT = client_c_tcp.c
TARGET_UDP_SERVER = server_c_udp
TARGET_UDP_CLIENT = client_c_udp
TARGET_TCP_SERVER = server_c_tcp
TARGET_TCP_CLIENT = client_c_tcp

all: $(TARGET_UDP_SERVER) $(TARGET_UDP_CLIENT) $(TARGET_TCP_SERVER) $(TARGET_TCP_CLIENT)

$(TARGET_UDP_SERVER): $(SRC_UDP_SERVER)
	$(CC) $(CFLAGS) -o $(TARGET_UDP_SERVER) $(SRC_UDP_SERVER)

$(TARGET_UDP_CLIENT): $(SRC_UDP_CLIENT)
	$(CC) $(CFLAGS) -o $(TARGET_UDP_CLIENT) $(SRC_UDP_CLIENT)

$(TARGET_TCP_SERVER): $(SRC_TCP_SERVER)
	$(CC) $(CFLAGS) -o $(TARGET_TCP_SERVER) $(SRC_TCP_SERVER)

$(TARGET_TCP_CLIENT): $(SRC_TCP_CLIENT)
	$(CC) $(CFLAGS) -o $(TARGET_TCP_CLIENT) $(SRC_TCP_CLIENT)

clean:
	rm -f $(TARGET_UDP_SERVER)
	rm -f $(TARGET_UDP_CLIENT)
	rm -f $(TARGET_TCP_SERVER)
	rm -f $(TARGET_TCP_CLIENT)